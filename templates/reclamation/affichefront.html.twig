{% extends  'front/reste.front.html.twig' %}

{% block body %}
<h1 align="center"> Liste des Reclamations</h1>
<h5 align="center"><a href="{{ path('add') }}">Ajouter Reclamation</a></h5>
<table class="table table-striped", align="center">
    <tr>
        <th>IdRec</th>
        <th>Nom</th>
        <th>Type Reclamation</th>
        <th>Titre</th>
        <th>Description</th>
        <th>Date creation</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    <tr {% for r in reclamation %}>
        <td>{{ r.id }}</td>
        <td>{{ r.idUser }}</td>
        <td>{{ r.IdType }}</td>
        <td>{{ r.titre }}</td>
        <td>{{ r.descRec }}</td>
        <td>{{ r.dateRec|date("m/y/d") }}</td>
        <td><a href="{{ path('update',{'id':r.id}) }}">Update</a></td>
        <td><a href="{{ path('d',{'id':r.id}) }}">Delete</a></td>

    </tr {% endfor %}>
</table>
    {% endblock %}

