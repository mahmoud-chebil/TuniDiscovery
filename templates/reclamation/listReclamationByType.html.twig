{{ include('back/header.html.twig') }}
{% block body %}
    <h1 align="center">Liste des Reclamations</h1>
    <li class="nav-item menu-open">
        <a href="#" class="nav-link active">

            <p>
                Type
                <i class="right fas fa-angle-left"></i>
            </p>

        </a>
        {% for i in type %}
            <ul class="nav nav-treeview">
                <li class="nav-item">

                    <a href="{{ path ('listReclamationByType',{'id':i.id}) }}"class="nav-link">{{ i.description }}

                        <i class="far fa-circle nav-icon"></i>

                    </a>
                </li>
            </ul>
        {% endfor %}
    </li>



    <table border="2", align="center", width="100%">
        <tr>
            <th>IdRec</th>
            <th>Nom</th>
            <th>Type Reclamation</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Date creation</th>
            <th>etat de reclamation</th>
            <th>reponse de reclamation</th>
            <th>Update</th>
            <th>Reponse</th>
            <th>Delete</th>

        </tr>

        <tr> {% for r in reclamation %}
            <td>{{ r.id }}</td>
            <td>{{ r.idUser }}</td>
            <td>{{ r.IdType }}</td>
            <td>{{ r.titre }}</td>
            <td>{{ r.descRec }}</td>
            <td>{{ r.dateRec|date("m/y/d") }}</td>
            <td>{{ r.etat }}</td>
            <td>{{ r.reponse }}</td>
            <td><a href="{{ path('Etat',{'id':r.id}) }}">etat</a></td>
            <td><a href="{{ path('Reponse',{'id':r.id}) }}">Reponse</a></td>
            <td><a href="{{ path('d',{'id':r.id}) }}">Delete</a></td>



        </tr>{% endfor %}
    </table>

{% endblock %}
{{ include('back/footer.html.twig') }}