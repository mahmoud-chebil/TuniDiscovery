{% extends 'accueil/reste.front.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
    <h1>Reservations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbPersonne</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.nbPersonne }}</td>
                <td>
                    {{ include('reservation_cd/_delete_form.html.twig') }}

                    <a href="{{ path('reservation_cd_edit', {'id': reservation.id}) }}">Update</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservation_cd_new') }}">Create new</a>
{% endblock %}
