  <!--   Core JS Files   -->
  <script src="backPublic/assets/js/core/popper.min.js"></script>
  <script src="backPublic/assets/js/core/bootstrap.min.js"></script>
  <script src="backPublic/assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="backPublic/assets/js/plugins/smooth-scrollbar.min.js"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
