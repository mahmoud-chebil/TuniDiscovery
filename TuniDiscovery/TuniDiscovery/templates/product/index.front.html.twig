{{ include('header-front.html.twig') }}
{% block title %}
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Les produits</h1>
    </div>

    <div class="row">
        {% for product in products  %}
            <div class="col-2 mt-2">
                <div class="border border-dark rounded p-3 clearfix">
                    <h2>
                        {{ product.name }}
                        -
                        {{ product.price }}
                        DT
                    </h2>
                   <img class="w-100 d-block"  height="200"  src="/uploads/{{ product.images[0].imageName }}" alt="Slide Image">
                    <hr>
                    <h4>
                        {{ product.description }}

                    </h4>
                    <form method="post" action="#" >
                        <button type="submit" class="btn btn-success float-right">
                            <i class="fas fa-shopping-cart mr-1"></i>
                            Ajouter
                        </button>
                    </form>

                </div>

            </div>
        {% endfor %}
    </div>
    {{ knp_pagination_render(products) }}
{% endblock %}
{{ include('footer-front.html.twig') }}
